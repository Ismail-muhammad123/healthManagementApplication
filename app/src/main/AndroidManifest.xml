<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hospitalmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HospitalManagement">
        <activity
            android:name=".AddMessage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_add_message"
            android:theme="@style/Theme.HospitalManagement.Fullscreen" />
        <activity
            android:name=".DoctorBookings"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_doctor_bookings"
            android:theme="@style/Theme.HospitalManagement.Fullscreen" />
        <activity
            android:name=".Message"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_message"
            android:theme="@style/Theme.HospitalManagement.Fullscreen" />
        <activity
            android:name=".Departments"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_departments"
            android:theme="@style/Theme.HospitalManagement.Fullscreen" />
        <activity
            android:name=".PatientBookings"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_patient_bookings"
            android:theme="@style/Theme.HospitalManagement.Fullscreen" />
        <activity android:name=".BookDoctorActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".DoctorRegistrationActivity" />
        <activity android:name=".PatientRegistrationActivity" />
        <activity android:name=".SelectRegistrationActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>